<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_medium">

        <Button
            android:id="@+id/btnSound"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="@string/sound_on"
            android:textSize="20sp"
            android:background="@drawable/rounded_card"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/btnLanguage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="@string/change_language"
            android:textSize="20sp"
            android:background="@drawable/rounded_card"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/puzzle_title"
            android:textSize="@dimen/text_title"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/btnSound"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/margin_small"/>

        <LinearLayout
            android:id="@+id/controlButtons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/titleText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/margin_medium">

            <Button
                android:id="@+id/btnUpload"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:text="@string/upload_image"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:background="@drawable/btn_primary"
                android:layout_marginEnd="4dp"/>

            <Button
                android:id="@+id/btnShuffle"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:text="@string/shuffle"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:background="@drawable/btn_secondary"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"/>

            <Button
                android:id="@+id/btnHint"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:text="@string/hint"
                android:textSize="14sp"
                android:textColor="@color/text_dark"
                android:textAllCaps="false"
                android:background="@drawable/btn_warning"
                android:layout_marginStart="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/difficultySelector"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/controlButtons"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/margin_medium">

            <Button
                android:id="@+id/btnEasy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/easy"
                android:textSize="12sp"
                android:textColor="@color/primary_dark"
                android:textAllCaps="false"
                android:background="@drawable/btn_difficulty_selected"
                android:layout_marginEnd="4dp"/>

            <Button
                android:id="@+id/btnMedium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/medium"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:background="@drawable/btn_difficulty"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"/>

            <Button
                android:id="@+id/btnHard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/hard"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:background="@drawable/btn_difficulty"
                android:layout_marginStart="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/statsContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/difficultySelector"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/margin_medium">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/rounded_card"
                android:padding="@dimen/padding_small"
                android:layout_marginEnd="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time_label"
                    android:textColor="@color/text_light"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/txtTimer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/default_time"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/text_stat"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/rounded_card"
                android:padding="@dimen/padding_small"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/moves_label"
                    android:textColor="@color/text_light"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/txtMoves"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zero"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/text_stat"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/rounded_card"
                android:padding="@dimen/padding_small"
                android:layout_marginStart="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/correct_label"
                    android:textColor="@color/text_light"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/txtCorrect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zero"
                    android:textColor="@color/success"
                    android:textSize="@dimen/text_stat"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/progress_drawable"
            android:background="@drawable/progress_background"
            app:layout_constraintTop_toBottomOf="@id/statsContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/margin_medium"/>

        <TextView
            android:id="@+id/txtProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/progress_zero"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="@id/progressBar"
            app:layout_constraintBottom_toBottomOf="@id/progressBar"
            app:layout_constraintStart_toStartOf="@id/progressBar"
            app:layout_constraintEnd_toEndOf="@id/progressBar"/>

        <FrameLayout
            android:id="@+id/puzzleContainer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/rounded_card"
            android:padding="@dimen/padding_small"
            app:layout_constraintTop_toBottomOf="@id/progressBar"
            app:layout_constraintBottom_toTopOf="@id/previewContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_min="200dp"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginBottom="@dimen/margin_small"/>

        <LinearLayout
            android:id="@+id/previewContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/rounded_card"
            android:padding="@dimen/padding_small"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="@dimen/margin_small">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/target_image"
                android:textColor="@color/primary"
                android:textStyle="bold"
                android:textSize="14sp"/>

            <ImageView
                android:id="@+id/imgPreview"
                android:layout_width="@dimen/preview_size"
                android:layout_height="@dimen/preview_size"
                android:scaleType="centerCrop"
                android:layout_marginTop="4dp"
                android:background="@color/text_light"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
